<!DOCTYPE html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font: 13px Helvetica, Arial;
      }
      form {
        background: white;
        padding: 3px;
        position: fixed;
        bottom: 0;
        width: 100%;
      }
      form input {
        border: 1px solid gray;
        padding: 10px;
        width: 50%;
        margin-right: 0.5%;
      }
      form button {
        width: 9%;
        background: rgb(130, 224, 255);
        border: none;
        padding: 10px;
      }
      #messages {
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      #messages li {
        padding: 5px 10px;
      }
      #messages li:nth-child(odd) {
        background: #eee;
      }
    </style>
    <script>var currentUser ={
      username:"<%=currentUser.username%>",
      _id:"<%=currentUser._id%>"
    };
    
      var user = {
        username:"<%=user.username%>",
        id:"<%=user._id%>"
      };
    
    
    </script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/script.js"></script>
  </head>
  <body onload="add()">
    <h1><a href="/user/">user page</a></h1>
    <ul id="messages">
      <% messages.forEach(function(message){ %>
        <li>
          <%=message.message%>
        </li>
  <% });%>
    </ul>
    <form id="message-form">
      <input id="m" /><button type="submit">
        Send
      </button>
    </form>
  </body>
</html>
